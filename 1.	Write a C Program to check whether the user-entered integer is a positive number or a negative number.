//1.	Write a C Program to check whether the user-entered integer is a positive number or a negative number.
#include <stdio.h>
#include <stdlib.h>

int main()
{
    int a;
    printf("enter the number: \n");
    scanf("%d",&a);
    if(a>0)
    {
        printf("the number %d is positive",a);

    }
    else
    {
        printf("the given number %d is negative",a);

    }
    return 0;
}
